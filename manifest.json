{
    "manifest_version": 3,
    "name": "gemini chrome extension",
    "description": "Find global entry interviews that meet your selection criteria.",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "images/logo.png",
        "32": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
    },
    
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "activeTab"
    ],
    "host_permissions":[
        "http://localhost:8000/"
    ]
}